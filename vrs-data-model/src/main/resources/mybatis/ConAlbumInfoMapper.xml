<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mastery.dao.IAlbumInfoDao">
	<!-- Result Map -->
	<resultMap id="BaseResultMap" type="AlbumInfo">
		<result column="id" property="id" />
		<result column="cid" property="cid" />
		<result column="NAME" property="name" />
		<result column="SUB_TITLE" property="subTitle" />
		<result column="TAG" property="tag" />
		<result column="IMG" property="img" />
		<result column="LINK" property="link" />
		<result column="DESCRIPTION" property="description" />
		<result column="SHORT_DESC" property="shortDesc" />
		<result column="IS_END" property="isEnd" />
		<result column="RELEASE_DATE" property="releaseDate" />
		<result column="CREATE_TIME" property="createTime" />
		<result column="UPDATE_TIME" property="updateTime" />
		<result column="USER_ID" property="userId" />
		<result column="UPDATE_UID" property="updateUid" />
		<result column="DELETED" property="deleted" />
	</resultMap>

	<!-- CON_ALBUM_INFO table all fields -->
	<sql id="Base_Column_List">
		id,cid,NAME,SUB_TITLE,TAG,IMG,LINK,DESCRIPTION,SHORT_DESC,IS_END,RELEASE_DATE,CREATE_TIME,UPDATE_TIME,USER_ID,UPDATE_UID,DELETED
	</sql>

	<!-- 查询条件 -->
	<sql id="Example_Where_Clause">
		where 1=1 and DELETED != 1
		<trim suffixOverrides=",">
			<if test="id != null  ">
				and id=#{id}
			</if>
			<if test="cid != null  ">
				and cid=#{cid}
			</if>
			<if test="name != null  and name != ''">
				and NAME=#{name}
			</if>
			<if test="subTitle != null  and subTitle != ''">
				and SUB_TITLE=#{subTitle}
			</if>
			<if test="tag != null  and tag != ''">
				and TAG=#{tag}
			</if>
			<if test="isEnd != null">
				and IS_END=#{isEnd}
			</if>
			<if test="releaseDate != null">
				and RELEASE_DATE=#{releaseDate}
			</if>
			<if test="createTime != null  ">
				and CREATE_TIME=#{createTime}
			</if>
			<if test="updateTime != null  ">
				and UPDATE_TIME=#{updateTime}
			</if>
			<if test="userId != null  ">
				and USER_ID=#{userId}
			</if>
			<if test="updateUid != null  ">
				and UPDATE_UID=#{updateUid}
			</if>
			<if test="baseStart != null and baseSize != null ">
				limit #{baseStart}, #{baseSize}
			</if>
		</trim>
	</sql>


	<!-- 插入记录 -->
	<insert id="insert" parameterType="AlbumInfo">
		insert into
		con_album_info(cid,NAME,SUB_TITLE,TAG,IMG,LINK,DESCRIPTION,SHORT_DESC,IS_END,RELEASE_DATE,CREATE_TIME,USER_ID)
		values(#{cid},#{name},#{subTitle},#{tag},#{img},#{link},#{description},#{shortDesc},#{isEnd},#{releaseDate},NOW(),#{userId})
		<selectKey keyProperty="id" resultType="long" order="AFTER">
			select
			LAST_INSERT_ID()
		</selectKey>
	</insert>

	<!-- 根据id，修改记录 -->
	<update id="update" parameterType="AlbumInfo">
		update con_album_info set
		cid=#{cid},NAME=#{name},SUB_TITLE=#{subTitle},IMG=#{img},LINK=#{link},,TAG=#{tag},SHORT_DESC=#{shortDesc},DESCRIPTION=#{description},IS_END=#{isEnd},RELEASE_DATE=#{releaseDate},DELETED=#{deleted},UPDATE_UID=#{updateUid},UPDATE_TIME
		= NOW() where
		id=#{id}
	</update>

	<update id="updateBySelective" parameterType="AlbumInfo">
		update CON_ALBUM_INFO set
		<trim suffixOverrides=",">
			<if test="cid != null  ">
				cid=#{cid},
			</if>
			<if test="name != null  and name != '' ">
				NAME=#{name},
			</if>
			<if test="img != null  and img != '' ">
				IMG=#{img},
			</if>
			<if test="link != null  and link != '' ">
				LINK=#{link},
			</if>
			<if test="subTitle != null  and subTitle != '' ">
				SUB_TITLE=#{subTitle},
			</if>
			<if test="shortDesc != null  and shortDesc != '' ">
				SHORT_DESC=#{shortDesc},
			</if>
			<if test="description != null  and description != '' ">
				DESCRIPTION=#{description},
			</if>
			<if test="tag != null  and tag != '' ">
				TAG=#{tag},
			</if>
			<if test="releaseDate != null  ">
				RELEASE_DATE=#{releaseDate},
			</if>
			<if test="deleted != null  ">
				DELETED=#{deleted},
			</if>
			<if test="isEnd != null  ">
				IS_END=#{isEnd},
			</if>
			<if test="userId != null  ">
				USER_ID=#{userId},
			</if>
			<if test="updateUid != null  ">
				UPDATE_UID=#{updateUid},
			</if>
			UPDATE_TIME = NOW()
		</trim>
		where ID=#{id}
	</update>



	<!-- 逻辑删除，将deleted 改成 1 -->
	<update id="delete" parameterType="AlbumInfo">
		update CON_ALBUM_INFO set
		DELETED=1 , UPDATE_TIME = NOW(), UPDATE_UID=#{updateUid} where
		id =#{id}
	</update>

	<!-- 列表 -->
	<select id="selectById" resultMap="BaseResultMap" parameterType="java.lang.Long">
		select
		<include refid="Base_Column_List" />
		from CON_ALBUM_INFO where ID = #{id}
	</select>

	<!-- 列表总数 -->
	<select id="selectByModelCount" resultType="java.lang.Integer"
		parameterType="AlbumInfo">
		select count(1) from CON_ALBUM_INFO
		<include refid="Example_Where_Clause" />
	</select>

	<!-- 根据id查询 -->
	<select id="selectByModel" resultMap="BaseResultMap"
		parameterType="AlbumInfo">
		select
		<include refid="Base_Column_List" />
		from CON_ALBUM_INFO
		<include refid="Example_Where_Clause" />

	</select>
	
	<!-- 模糊搜索列表 -->
	<select id="selectVagueByModel" resultMap="BaseResultMap" parameterType="AlbumInfo">
		select
		<include refid="Base_Column_List" />
		from CON_ALBUM_INFO where 1=1 and DELETED != 1
		<trim suffixOverrides=",">
			<if test="id != null  ">
				and id=#{id}
			</if>
			<if test="cid != null  ">
				and cid=#{cid}
			</if>
			<if test="name != null  and name != '' ">
				and NAME like CONCAT('%',#{name},'%') 
			</if>
		</trim>
	</select>


	<!-- 列表总数 -->
	<select id="selectByMapCount" resultType="java.lang.Integer"
		parameterType="java.util.Map">
		select count(1) from CON_ALBUM_INFO
		<include refid="Example_Where_Clause" />
	</select>

	<!-- 根据id查询 -->
	<select id="selectByMap" resultMap="BaseResultMap"
		parameterType="java.util.Map">
		select
		<include refid="Base_Column_List" />
		from CON_ALBUM_INFO
		<include refid="Example_Where_Clause" />

	</select>

	<!-- 根据sql查询 -->
	<select id="selectByBuilder" resultMap="BaseResultMap"
		parameterType="com.mastery.common.sql.object.SelectSql">
		SELECT ${selectCondition}
		FROM CON_ALBUM_INFO
		<if test="whereCondition != null and whereCondition != '' ">
			WHERE ${whereCondition}
		</if>
		<if test="orderByCondition != null  and orderByCondition != '' ">
			ORDER BY ${orderByCondition}
		</if>
		<if test="limitCondition != null  and limitCondition != '' ">
			LIMIT ${limitCondition}
		</if>
	</select>

	<!-- 根据sql查询列表总数 -->
	<select id="selectCountByBuilder" resultType="java.lang.Integer"
		parameterType="com.mastery.common.sql.object.SelectSql">
		SELECT count(*)
		FROM CON_ALBUM_INFO
		<if test="whereCondition != null and whereCondition != '' ">
			WHERE ${whereCondition}
		</if>
	</select>

</mapper>   

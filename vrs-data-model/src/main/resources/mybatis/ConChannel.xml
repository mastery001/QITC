<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mastery.dao.IChannelDao">
	<!-- Result Map -->
	<resultMap id="BaseResultMap" type="Channel">
		<result column="id" property="id" />
		<result column="name" property="name" />
		<result column="CREATE_TIME" property="createTime" />
		<result column="UPDATE_TIME" property="updateTime" />
		<result column="USER_ID" property="userId" />
		<result column="UPDATE_UID" property="updateUid" />
		<result column="DELETED" property="deleted" />
	</resultMap>

	<!-- con_channel table all fields -->
	<sql id="Base_Column_List">
		id,name,CREATE_TIME,UPDATE_TIME,USER_ID,UPDATE_UID,DELETED
	</sql>

	<!-- 查询条件 -->
	<sql id="Example_Where_Clause">
		where 1=1 and DELETED != 1
		<trim suffixOverrides=",">
			<if test="id != null  ">
				and id=#{id}
			</if>
			<if test="name != null  and name != ''   ">
				and name=#{name}
			</if>
			<if test="createTime != null  ">
				and CREATE_TIME=#{createTime}
			</if>
			<if test="updateTime != null  ">
				and UPDATE_TIME=#{updateTime}
			</if>
			<if test="userId != null  ">
				and USER_ID=#{userId}
			</if>
			<if test="updateUid != null  ">
				and UPDATE_UID=#{updateUid}
			</if>
			<if test="baseStart != null and baseSize != null ">
				limit #{baseStart}, #{baseSize}
			</if>
		</trim>
	</sql>


	<!-- 插入记录 -->
	<insert id="insert" parameterType="Channel">
		insert into con_channel(name,CREATE_TIME,USER_ID)
		values(#{name},NOW(),#{userId})
		<selectKey keyProperty="id" resultType="long" order="AFTER">
			select
			LAST_INSERT_ID()
		</selectKey>
	</insert>

	<!-- 根据id，修改记录 -->
	<update id="update" parameterType="Channel">
		update con_channel set
		name=#{name},UPDATE_UID=#{updateUid},UPDATE_TIME = NOW() where
		id=#{id}
	</update>



	<!-- 逻辑删除，将deleted 改成 1 -->
	<update id="delete" parameterType="Channel">
		update con_channel set
		DELETED=1 , UPDATE_TIME = NOW(), UPDATE_UID=#{updateUid} where
		id =
		#{id}
	</update>

	<!-- 列表 -->
	<select id="selectById" resultMap="BaseResultMap" parameterType="java.lang.Long">
		select
		<include refid="Base_Column_List" />
		from con_channel where ID = #{id}
	</select>

	<!-- 列表总数 -->
	<select id="selectByModelCount" resultType="java.lang.Integer"
		parameterType="Channel">
		select count(1) from con_channel
		<include refid="Example_Where_Clause" />
	</select>

	<!-- 根据id查询 -->
	<select id="selectByModel" resultMap="BaseResultMap"
		parameterType="Channel">
		select
		<include refid="Base_Column_List" />
		from con_channel
		<include refid="Example_Where_Clause" />

	</select>


	<!-- 列表总数 -->
	<select id="selectByMapCount" resultType="java.lang.Integer"
		parameterType="java.util.Map">
		select count(1) from con_channel
		<include refid="Example_Where_Clause" />
	</select>

	<!-- 根据id查询 -->
	<select id="selectByMap" resultMap="BaseResultMap"
		parameterType="java.util.Map">
		select
		<include refid="Base_Column_List" />
		from con_channel
		<include refid="Example_Where_Clause" />

	</select>

	<!-- 根据sql查询 -->
	<select id="selectByBuilder" resultMap="BaseResultMap"
		parameterType="com.mastery.common.sql.object.SelectSql">
		SELECT ${selectCondition}
		FROM con_channel
		<if test="whereCondition != null and whereCondition != '' ">
			WHERE ${whereCondition}
		</if>
		<if test="orderByCondition != null  and orderByCondition != '' ">
			ORDER BY ${orderByCondition}
		</if>
		<if test="limitCondition != null  and limitCondition != '' ">
			LIMIT ${limitCondition}
		</if>
	</select>

	<!-- 根据sql查询列表总数 -->
	<select id="selectCountByBuilder" resultType="java.lang.Integer"
		parameterType="com.mastery.common.sql.object.SelectSql">
		SELECT count(*)
		FROM con_channel
		<if test="whereCondition != null and whereCondition != '' ">
			WHERE ${whereCondition}
		</if>
	</select>

</mapper>   

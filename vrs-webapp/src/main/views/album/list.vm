<style type="text/css">
td.v_bfpt label{padding-right:6px;}
.infobtn div{width:160px;}
.infobtn div a{margin-right:5px;margin-bottom:5px;_display:inline;}
.extend{margin-right: 25px;}
</style>
<!--引用搜索-->
<div class="pageHeader">
    <form  class="pageForm required-validate"  onsubmit="return navTabSearch(this);"  id="pagerForm" action="../album/search.action?cid=$!cid" method="post">
    <div class="searchBar">
        <table class="searchContent">
            <tbody><tr>
				<td><label>搜索：</label>
					<input maxlength="30" type="text" size="30" name="searchName" #if($!name)value=$!name #end >
				</td>
                <td> <select name="nameType" >
				    <option value="0" #if($!nameType == 0)selected="selected" #end>名称</option>
					<option value="1" #if($!nameType == 1)selected="selected" #end>ID</option>
				  </select>
				 </td>
                
				<td>
					<div class="buttonActive"><div class="buttonContent"><button type="submit">检  索</button></div></div>
                </td>
            </tr>
			</tbody>
		</table>
    </div>
    </form>
</div>
<div class="pageContent">
  <!-- search list -->
	<div class="tabList">
	  <div style="overflow:auto;" layouth="65" class="gridScroller">
		#if(!$null.isNull($!list)&&$!list.size()!=0&&$!list)
	  #foreach($!info in $!list)
		 <div class="tabli clearf" style="margin:0;border-top:1px dashed #c1c1c1;">
		  <div class="imgbox">
		    <a title="专辑 - $!info.name" href="../album/view.action?id=$!info.id" target="navTab" rel="editAlbum$!info.id"><img src="../$!{info.img}" width="96" height="128" ></a>
		  </div>
		  <div class="infobox">
		    <table class="tabbox" cellpadding="0" cellspacing="0">
			   <tr>
                 <td>专辑ID：</td>
			     <td>$!info.id</td>
			   </tr>
			   <tr>
			     <td>名称：</td>
				 <td>$!info.name</td>
			   </tr>
			   <tr>
			     <td>副标题：</td>
			     <td>$!info.subTitle</td>
			   </tr>
			  <!-- 	 <tr>
			   	 	#if($!cid != 1)
			   			<td>总集数：</td>
			  		 	<td>$!info.episode</td>
			 	 	#end
			  </tr> -->
			 	  <tr>
               		  <td>是否完结：</td>
			      	  <td> #if($!info.isEnd == 1)
							是
						 #else
							 否
						  #end
				     </td>
			  	 </tr>
			   <tr>
			      <td>上映时间：</td>
				  <td>$!info.releaseDate</td>
			   </tr>
			   <tr>
				 <td colspan="2" style="width:auto; width:300px" >
				  <div class="clearf">
					<a class="buttonActive extend"  href="../video/list.action?pid=$!info.id&pname=$!info.name"  target="navTab" title="$!info.name - 专辑视频管理" rel="albumVideoList$!info.id">
							<span>专辑视频管理</span>
					</a>
					<a class="buttonActive extend" href="../album/toEdit.action?id=$!info.id" target="navTab" rel="editAlbum$!info.id" title="专辑 - $!info.name">
						<span>维护</span>
					</a>
					<a class="buttonActive extend" href="../album/delete.action?id=$!info.id&cid=$!info.cid" target="ajaxTodo" rel="rightcontent" mask="true" title="确定要删除吗?" title="专辑 - $!info.name">
						<span>删除</span>
					</a>
					<a class="buttonActive extend"  href="$!{info.link}" target="_blank">
						<span>专辑播放地址</span>
					</a>

				  </div>
				 </td>			   
			   </tr>
			</table>
		  </div>
		</div>
		#end
		#else
		<div>符合条件的数据不存在!</div>
		#end
	  </div>
	</div>
  #parse("search/pageFoot.vm")
</div>
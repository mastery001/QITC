
<style type="text/css">
	.xxother label{float:left;}
	
	.noneshow {display:none;}
</style>
<div class="pageContent">
	<form method="post" action="../channel/edit.action" class="pageForm required-validate" onsubmit="return validateCallback(this, navTabAjaxDone);">
		<input type="hidden" name="pageNumTab" value="$!vo.pageNumTab"/>
		<input type="hidden" name="numPerPageTab" value="$!vo.numPerPageTab"/>
		<div class="pageFormContent xxother" layoutH="56">
				<p>
    				<label>频道名称：</label>
    				<input name="name" #if($!vo.name)value="$!vo.name"#end id="name" maxlength="30"type="text" size="30"/>
    			</p>
				<input type="hidden" name="id" #if($!vo.id)value="$!vo.id"#end/>
		</div>
		<div class="formBar">
			<ul>
				<li><div class="buttonActive"><div class="buttonContent"><button type="submit">保存</button></div></div></li>
				<li>
					<div class="button"><div class="buttonContent"><button type="button" class="close">取消</button></div></div>
				</li>
			</ul>
		</div>
	</form>
</div>
